
<div class="books delete">
    <h1>Delete Book</h1>
    
    <%= form_for( @book, method: 'delete') do |f| %>
    
    <p>Are you sure you want to permanently delete this book?</p>
    <p><%= @book.title %> </p>

    <div class="form-buttons">
        <%= f.submit("Delete Book")%>
    </div>
        <%= link_to 'Back', books_path %>
    <% end %>
</div>
